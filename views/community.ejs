<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>re-ad: </title>
</head>
<body>
    <div>
        <%- include("./modules/nav", { req: req })  %>
        <div>
            <div>
                <% community.forEach(com => { %>
                    <h1>Main Page Of <%= com.name %></h1> 
                    <% creator_info.forEach(user => { %>
                        <p>creator: <%= user.name %></p>
                    <%}) %>
                        <% if (req.session.loggedin === true) {%>
                            <form action="/join-com/" method="post" class="form rounded">
                                <button type="JOIN" class="btn btn-primary">JOIN</button>
                            </form>
                        <% } %>
                <% }); %>
            </div>        
        </div>
    </div>
</body>
</html>