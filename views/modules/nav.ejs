        <a style="padding: 1em;" href="/login">log-in</a>
        <a style="padding: 1em;" href="/signin">sign-in</a>
    <% } else if (req.session.loggedin === true){ %>
        <a style="padding: 1em;" href="/user/<%= req.session.userid %>"><%= req.session.username %></a>
