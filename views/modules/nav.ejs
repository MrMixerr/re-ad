        <a style="padding: 1em;" href="/logout">log-out</a>
    <!-- for some reason the code crashes out and loggiedin is still true -->
    <!-- so this is "security code" -->
    <% } else { %>
        <a style="padding: 1em;" href="/login">log-in</a>
        <a style="padding: 1em;" href="/signin">sign-in</a>
    <% } %>
</div>